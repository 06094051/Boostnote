.root
  absolute top left bottom right

.body
  absolute right
  bottom $statusBar-height - 1
  top $topBar-height - 1
  left $sideNav-width

.body--expanded
  @extend .body
  left $sideNav--folded-width

.slider
  absolute top bottom
  width 1px
  background-color $ui-borderColor
  border-width 0
  border-style solid
  border-color $ui-borderColor
  cursor col-resize

.slider--active
  @extend .slider
  background-color $ui-button--active-backgroundColor

.slider-hitbox
  absolute top bottom left right
  width 7px
  left -3px
