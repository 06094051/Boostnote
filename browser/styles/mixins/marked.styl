marked()
  line-height 1.2em
  h1
    font-size 2em
    margin 0.67em auto
  h2
    font-size 1.5em
    margin 0.83em auto
  h3
    font-size 1.17em
    margin 1em auto
  h4
    font-size 1em
    margin 1.33em auto
  h5
    font-size 0.83em
    margin 1.67em auto
  h6
    font-size 0.67em
    margin 2.33em auto
  h1, h2, h3, h4, h5, h6
    font-weight bold
  img
    max-width 100%
  strong
    font-weight bold
  em
    font-style italic
  s
    text-decoration line-through
  blockquote
    border-left solid 4px brandBorderColor
    margin 1em 0
    padding 0 25px
  ul
    list-style-type disc
    padding-left 35px
    li
      display list-item
      margin 0.5em 0
    &>li>ul
      list-style-type circle
      &>li>ul
        list-style-type square
  ol
    list-style-type decimal
    padding-left 35px
    li
      display list-item
      margin 0.5em 0
  code
    font-family monospace
    padding 2px 4px
    border solid 1px borderColor
    border-radius 4px
    font-size 0.9em
  pre
    padding 5px
    border solid 1px borderColor
    border-radius 5px
    margin 0.5em 0
    &>code
      padding 0
      border none
      border-radius 0
  table
    thead
      tr
        background-color tableHeadBgColor
      th
        border-style: solid;
        padding: 5px;
        border-width: 1px 0 2px 1px;
        border-color borderColor
        &:last-child
          border-right solid 1px borderColor
    tbody
      tr:nth-child(2n + 1)
        background-color tableOddBgColor
      tr:nth-child(2n)
        background-color tableEvenBgColor
      td
        border-style: solid;
        padding: 5px;
        border-width: 0 0 1px 1px;
        border-color borderColor
        &:last-child
          border-right solid 1px borderColor
