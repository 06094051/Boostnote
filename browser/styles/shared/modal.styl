.ModalBase
  fixed top left right bottom
  z-index 1000
  overflow-y auto
  overflow-x auto
  background-color modalBaseColor
  &.hide
    display none
  .modal
    width 500px
    margin 25px auto 0
    absolute top left right
    background-color white
    border-radius 10px
    padding 15px
    box-shadow popupShadow
    .modal-body
      .modal-tab
        text-align center
    .modal-footer
      clearfix()
      border-top solid 1px borderColor
      padding-top 15px
      .modal-control
        float right

  .launch-modal
    .modal-tab
      .btn-primary, .btn-default
        margin 0
        border-radius 0
        &:nth-child(1)
          border-top-left-radius 10px
          border-bottom-left-radius 10px
        &:nth-child(2)
          border-left 0
          border-top-right-radius 10px
          border-bottom-right-radius 10px

    .ace_editor
      height 300px
      border-radius 5px
      border solid 1px borderColor
