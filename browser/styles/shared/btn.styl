.btn-primary, .btn-default
  border-style solid
  border-width 2px
  background-image none
  height 44px
  padding 0 15px
  border-radius 22px
  box-sizing border-box
  font-size 1.1em
  font-weight 600
  transition 0.1s
  cursor pointer

.btn-block
  display block
  width 100%
  margin 0 auto

.btn-square
  display inline-block
  width 44px
  padding 0

.btn-sm
  height 32px
  border-radius 16px
  &.btn-square
    width 32px

.btn-primary
  border-color brandBorderColor
  background-color transparent
  color brandColor
  &:hover, &.hover, &:active, &.active
    color white
    background-color brandColor

.btn-default
  border-color invBorderColor
  background-color transparent
  color invBorderColor
  &:hover, &.hover, &:active, &.active
    color white
    background-color invBorderColor
