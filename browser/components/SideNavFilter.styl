      color $ui-text-color
    &:hover
      background-color alpha($ui-button--active-backgroundColor, 50%)
      color #e74c3c
      .menu-button-label
        color $ui-text-color
    &:active, &:active:hover
      background-color alpha($ui-button--active-backgroundColor, 50%)
      color #e74c3c
      .menu-button-label
        color $ui-text-color

  .menu-button-star--active
