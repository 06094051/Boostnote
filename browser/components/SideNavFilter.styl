    color #F9BF3B
    background-color $ui-button--active-backgroundColor
    .menu-button-label
      color $ui-text-color
    &:hover
      background-color alpha($ui-button--active-backgroundColor, 50%)
      color #F9BF3B
      .menu-button-label
        color $ui-text-color
    &:active, &:active:hover
      background-color alpha($ui-button--active-backgroundColor, 50%)
      color #F9BF3B
      .menu-button-label
        color $ui-text-color

  .menu-button-trash--active
    @extend .menu-button
    color #5D9E36
    background-color $ui-button--active-backgroundColor
    .menu-button-label
      color $ui-text-color
    &:hover
      background-color alpha($ui-button--active-backgroundColor, 50%)
      color #5D9E36
      .menu-button-label
        color $ui-text-color
    &:active, &:active:hover
      background-color alpha($ui-button--active-backgroundColor, 50%)
      color #5D9E36
      .menu-button-label
        color $ui-text-color

