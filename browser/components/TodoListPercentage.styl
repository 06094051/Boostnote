.percentageBar
  position absolute
  top 50px
  right 0px
  left 0px
  background-color #DADFE1
  width 100%
  height: 17px
  font-size: 12px
  z-index 100
  border-radius 2px

.progressBar
  background-color: #1EC38B
  height 17px
  border-radius 2px
  transition 0.4s cubic-bezier(0.4, 0.4, 0, 1)

.percentageText
  color #f4f4f4
  padding: 2px 43%
  font-weight 600

body[data-theme="dark"]
  .percentageBar
    background-color #363A3D

  .progressBar
    background-color: alpha(#939395, 50%)

  .percentageText
    color $ui-dark-text-color